{
  "openapi": "3.0.1",
  "info": {
    "title": "Commons Herd.io Web Notification",
    "description": "Reusable library for real-time web notifications using Atmosphere (WebSocket + Long Polling fallback).",
    "license": {
      "name": "The MIT License",
      "url": "https://opensource.org/license/mit/"
    },
    "version": "v4.0.0.RC5"
  },
  "externalDocs": {
    "description": "Commons Herd.io Web Notification WiKi",
    "url": "https://github.com/desiderati/commons/tree/master/common-web-notification"
  },
  "servers": [
    {
      "url": "http:/localhost:9090",
      "description": "Local Server"
    }
  ],
  "paths": {
    "/atm/broadcast": {
      "post": {
        "tags": [
          "broadcast-controller"
        ],
        "operationId": "broadcast",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BroadcastMessageObject"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BroadcastMessageObject": {
        "required": [
          "payload"
        ],
        "type": "object",
        "properties": {
          "broadcastId": {
            "type": "string"
          },
          "resourceId": {
            "type": "string"
          },
          "payload": {
            "type": "object"
          }
        }
      }
    }
  }
}
